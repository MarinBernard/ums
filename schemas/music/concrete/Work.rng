<?xml version="1.0" encoding="UTF-8"?>
<grammar xmlns="http://relaxng.org/ns/structure/1.0">
	<define name="CT_Work">
		<element name="work">
			<!-- This element might be used by reference -->
			<ref name="AT_Referenceable"/>
			<!-- Inheritance from the Product abstract type -->
			<ref name="AT_Product"/>
			<!-- Catalog IDs associated to the composition -->
			<optional>
				<ref name="LT_CatalogIds"/>
			</optional>
			<!-- Composers of the music work -->
			<ref name="LT_Composers"/>
			<!-- Lyricists of the music work -->
			<optional>
				<ref name="LT_Lyricists"/>
			</optional>
			<!-- Form of the music work -->
			<choice>
				<ref name="CT_Form"/>
				<ref name="RT_Form"/>
			</choice>
			<!-- Style of the music work -->
			<choice>
				<ref name="CT_Style"/>
				<ref name="RT_Style"/>
			</choice>
			<!-- Instruments of the music work -->
			<ref name="LT_Instruments"/>
			<!-- Main key of the work -->
			<optional>
				<choice>
					<ref name="CT_Key"/>
					<ref name="RT_Key"/>
				</choice>
			</optional>
			<!-- Inception event of the music work -->
			<optional>
				<element name="inception">
					<ref name="AT_Event"/>
				</element>
			</optional>	
			<!-- Completion event of the music work -->
			<optional>
				<element name="completion">
					<ref name="AT_Event"/>
				</element>
			</optional>			
			<!-- PremiÃ¨re event of the music work -->
			<optional>
				<element name="premiere">
					<ref name="AT_Event"/>
				</element>
			</optional>
			<!-- Layout of the work divided in movement sections -->
			<ref name="LT_Sections"/>
		</element>
	</define>
</grammar>